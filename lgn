using LogMe.Bal;
using LogMe.Classes;
using System;
using System.Windows.Forms;


namespace LogMeIn
{
    public partial class frmLogin : Form
    {
        private LoginUserBal _LoginBAL;
        public frmLogin()
        {
            InitializeComponent();
            _LoginBAL = new LoginUserBal();
            txtUsername.Focus();

        }

        private void btnLogin_Click(object sender, EventArgs e)
        {
            frmControl fmctrl = new frmControl();
            LoginUserCls _lgnCls = new LoginUserCls();
            if ((txtUsername.Text != "") && (txtPassword.Text != ""))
            {
                _lgnCls = _LoginBAL.getUser(txtUsername.Text.Trim(), txtPassword.Text.Trim());
                if (_lgnCls.UserName != null && _lgnCls.Password != null)
                {
                    //  MessageBox.Show("Login Successfully Done");
                    this.Hide();
                    fmctrl.Show();
                }
                else
                {
                    MessageBox.Show("Enter valid UserName/Password");
                    txtUsername.Text = "";
                    txtPassword.Text = "";
                    txtUsername.Focus();
                }
            }
            else { MessageBox.Show("Enter username and password"); }
        }

        private void btnReset_Click(object sender, EventArgs e)
        {
            txtUsername.Text = "";
            txtPassword.Text = "";
        }
    }
}
